{
  "name": "autoshow-cli",
  "author": "Anthony Campolo",
  "description": "Automated generation of show notes and content for audio and video files with text-to-speech and AI image generation capabilities.",
  "keywords": [
    "ChatGPT",
    "Claude",
    "Gemini",
    "Whisper.cpp",
    "Deepgram",
    "AssemblyAI",
    "Commander.js",
    "Coqui",
    "ElevenLabs",
    "Polly",
    "DALL-E",
    "BlackForestLabs",
    "Nova"
  ],
  "type": "module",
  "scripts": {
    "repo": "bash .github/repomix.sh",
    "setup": "./.github/setup/index.sh",
    "setup:all": "./.github/setup/index.sh --all",
    "setup:text": "./.github/setup/index.sh --transcription",
    "setup:transcription": "./.github/setup/index.sh --transcription",
    "setup:tts": "./.github/setup/index.sh --tts",
    "setup:tts:qwen3": "./.github/setup/tts/tts-env.sh && ./.github/setup/tts/qwen3.sh",
    "setup:tts:chatterbox": "./.github/setup/tts/tts-env.sh && ./.github/setup/tts/chatterbox.sh",
    "setup:tts:fish": "./.github/setup/tts/tts-env.sh && ./.github/setup/tts/fish-audio.sh",
    "setup:tts:cosyvoice": "./.github/setup/tts/tts-env.sh && ./.github/setup/tts/cosyvoice.sh",
    "check": "bunx tsc --noEmit",
    "as": "bun --env-file=.env src/commander.ts",
    "v": "bun as -- text --video",
    "v3": "bun as -- text --whisper-coreml large-v3-turbo --video",
    "f": "bun as -- text --file",
    "f3": "bun as -- text --whisper-coreml large-v3-turbo --file",
    "r": "bun as -- text --rss",
    "r3": "bun as -- text --whisper-coreml large-v3-turbo --rss",
    "p": "bun as -- text --playlist",
    "p3": "bun as -- text --whisper-coreml large-v3-turbo --playlist",
    "u": "bun as -- text --urls",
    "u3": "bun as -- text --whisper-coreml large-v3-turbo --urls",
    "c": "bun as -- text --channel",
    "c3": "bun as -- text --whisper-coreml large-v3-turbo --channel",
    "tts": "bun as -- tts",
    "image": "bun as -- image",
    "test:base": "mkdir -p output && bun test --env-file=.env --reporter=junit --reporter-outfile=spec.xml --timeout 360000",
    "test:local": "bun test:base test/text/text-local.test.ts test/tts/tts-local.test.ts test/extract/extract-local.test.ts",
    "test:services": "bun test:base test/tts/tts-services.test.ts test/text/text-services.test.ts test/image/image-services.test.ts test/video/video-services.test.ts",
    "test:text": "bun test:base test/text/*.test.ts",
    "test:text:local": "bun test:base test/text/text-local.test.ts",
    "test:text:process": "bun test:base test/text/text-process-commands.test.ts",
    "test:text:services": "bun test:base test/text/text-services.test.ts",
    "test:text:prompts": "bun test:base test/text/text-prompts.test.ts",
    "test:text:models": "bun test:base test/text/text-models.test.ts",
    "test:tts": "bun test:base test/tts/*.test.ts",
    "test:tts:local": "bun test:base test/tts/tts-local.test.ts",
    "test:tts:services": "bun test:base test/tts/tts-services.test.ts",
    "test:image": "bun test:base test/image/*.test.ts",
    "test:image:services": "bun test:base test/image/image-services.test.ts",
    "test:extract": "bun test:base test/extract/*.test.ts",
    "test:extract:local": "bun test:base test/extract/extract-local.test.ts",
    "test:extract:services": "bun test:base test/extract/extract-services.test.ts",
    "test:media": "bun test:base test/media/*.test.ts",
    "test:media:download": "bun test:base test/media/media-download.test.ts",
    "test:media:convert": "bun test:base test/media/media-convert.test.ts",
    "test:media:save-audio-files": "bun test:base test/media/save-audio-files.test.ts",
    "test:media:save-audio-urls": "bun test:base test/media/save-audio-urls.test.ts",
    "test:music": "bun test:base test/music/*.test.ts",
    "test:music:services": "bun test:base test/music/music-services.test.ts",
    "test:video": "bun test:base test/video/*.test.ts",
    "test:video:services": "bun test:base test/video/video-services.test.ts",
    "test:cli": "bun test:base test/**/*.test.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "0.71.2",
    "@aws-sdk/client-bedrock-runtime": "3.971.0",
    "@aws-sdk/client-polly": "3.971.0",
    "@aws-sdk/client-textract": "3.971.0",
    "@deepgram/sdk": "4.11.3",
    "@google/generative-ai": "0.24.1",
    "@runwayml/sdk": "3.11.0",
    "assemblyai": "4.22.1",
    "commander": "14.0.2",
    "domhandler": "5.0.3",
    "elevenlabs": "1.59.0",
    "epub": "1.3.0",
    "fast-xml-parser": "5.3.3",
    "htmlparser2": "10.0.0",
    "openai": "6.16.0",
    "ora": "9.0.0",
    "unpdf": "1.4.0",
    "zerox": "1.1.20"
  },
  "devDependencies": {
    "@types/bun": "1.3.6",
    "@types/node": "25.0.9",
    "repomix": "1.11.1",
    "typescript": "5.9.3"
  }
}