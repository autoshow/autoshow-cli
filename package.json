{
  "name": "autoshow-cli",
  "author": "Anthony Campolo",
  "description": "Automated generation of show notes and content for audio and video files with text-to-speech and AI image generation capabilities.",
  "keywords": [
    "ChatGPT",
    "Claude",
    "Gemini",
    "Whisper.cpp",
    "Deepgram",
    "AssemblyAI",
    "Commander.js",
    "Coqui",
    "ElevenLabs",
    "Polly",
    "DALL-E",
    "BlackForestLabs",
    "Nova"
  ],
  "type": "module",
  "scripts": {
    "repo": "bash .github/repomix.sh",
    "parse": "tsx .github/parse.ts",
    "tsx:base": "tsx --env-file=.env --no-warnings",
    "setup": "./.github/setup/index.sh",
    "check": "npx tsc --noEmit",
    "as": "npm run tsx:base -- src/commander.ts",
    "v": "npm run as -- text --video",
    "v3": "npm run as -- text --whisper large-v3-turbo --video",
    "f": "npm run as -- text --file",
    "f3": "npm run as -- text --whisper large-v3-turbo --file",
    "r": "npm run as -- text --rss",
    "r3": "npm run as -- text --whisper large-v3-turbo --rss",
    "p": "npm run as -- text --playlist",
    "p3": "npm run as -- text --whisper large-v3-turbo --playlist",
    "u": "npm run as -- text --urls",
    "u3": "npm run as -- text --whisper large-v3-turbo --urls",
    "c": "npm run as -- text --channel",
    "c3": "npm run as -- text --whisper large-v3-turbo --channel",
    "tts": "npm run as -- tts",
    "image": "npm run as -- image",
    "docker:build": "docker build -t autoshow-cli .",
    "docker:run": "docker run --rm -it -v $(pwd)/input:/app/input -v $(pwd)/output:/app/output -v $(pwd)/models:/app/models --env-file .env autoshow-cli",
    "docker:shell": "docker run --rm -it -v $(pwd)/input:/app/input -v $(pwd)/output:/app/output -v $(pwd)/models:/app/models --env-file .env autoshow-cli bash",
    "docker:text": "npm run docker:run -- text",
    "docker:tts": "npm run docker:run -- tts",
    "docker:image": "npm run docker:run -- image",
    "docker:extract": "npm run docker:run -- extract",
    "test:base": "tsx --test --env-file=.env --test-reporter=spec --test-reporter-destination=spec.log --test-concurrency=1",
    "test:local": "npm run test:base -- test/local.test.ts",
    "test:services": "npm run test:base -- test/services.test.ts",
    "test:prompts": "npm run test:base -- test/prompts.test.ts",
    "test:models": "npm run test:base -- test/models.test.ts",
    "test:cli": "npm run test:base -- test/*.test.ts"
  },
  "dependencies": {
    "@ai-sdk/openai": "1.3.5",
    "@anthropic-ai/sdk": "0.39.0",
    "@aws-sdk/client-bedrock-runtime": "3.826.0",
    "@aws-sdk/client-polly": "3.828.0",
    "@aws-sdk/client-textract": "3.864.0",
    "@deepgram/sdk": "3.11.1",
    "@google/generative-ai": "0.22.0",
    "ai": "4.2.9",
    "assemblyai": "4.9.0",
    "chalk": "5.4.1",
    "cloudflare": "4.5.0",
    "commander": "13.1.0",
    "elevenlabs": "1.59.0",
    "fast-xml-parser": "5.0.8",
    "file-type": "20.4.0",
    "openai": "4.86.1",
    "ora": "^8.2.0",
    "react": "19.1.0",
    "remove-markdown": "0.6.2",
    "unpdf": "1.1.0",
    "zerox": "1.1.20",
    "zod": "3.24.2"
  },
  "devDependencies": {
    "@types/node": "22.13.7",
    "@types/remove-markdown": "0.3.4",
    "repomix": "0.3.4",
    "tsx": "4.19.3",
    "typescript": "5.8.2"
  }
}